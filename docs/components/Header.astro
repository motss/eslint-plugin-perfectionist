---
import Navigation from './Navigation.vue'
import Logo from './Logo.astro'
---

<header class="header">
  <a href="/" class="home-link" aria-label="Perfectionist home page">
    <Logo class="logo" />
    <span class="title">Perfectionist</span>
  </a>
  <Navigation client:only="vue" />
</header>

<style>
  .header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-s) var(--space-s);
    color: var(--color-content-primary);
    background: var(--color-background-primary);
    container-type: inline-size;
    block-size: 84px;
  }

  .home-link {
    display: flex;
    gap: 8px;
    align-items: center;
    color: inherit;
    text-decoration: none;
    outline: none;
  }

  .logo {
    inline-size: 40px;
    block-size: 40px;
    padding: 2px;
  }

  .title {
    font-family: var(--font-family-title);
    font-size: 20px;
    font-weight: 500;
  }
</style>
